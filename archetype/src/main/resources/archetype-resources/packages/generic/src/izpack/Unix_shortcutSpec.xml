#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
<skipIfNotSupported/>
<programGroup defaultName="${game-name}"
            location="applications"/>
<shortcut
	name="${game-name}"
	target="/usr/bin/java"
	commandLine="-jar &quot;${symbol_dollar}INSTALL_PATH/${symbol_dollar}{${game-name}_build_final_name}.jar&quot;"
	description="Launch ${game-name}"
	iconFile="${symbol_dollar}INSTALL_PATH/icon.png"
	workingDirectory="${symbol_dollar}INSTALL_PATH"
	initialState="normal"
	programGroup="yes"
	desktop="no"
	applications="no"
	startMenu="no"
	startup="no"
	type="Application"
	terminal="false"
	encoding="UTF-8"
	categories="Game">
	<createForPack name="Core"/>
</shortcut>

<shortcut
	name="${game-name} safe launcher"
	target="/usr/bin/java"
	commandLine="-jar &quot;${symbol_dollar}INSTALL_PATH/${symbol_dollar}{${game-name}_build_final_name}.jar&quot; -- safe"
	description="Launch ${game-name} in safe mode"
	iconFile="${symbol_dollar}INSTALL_PATH/icon.png"
	workingDirectory="${symbol_dollar}INSTALL_PATH"
	initialState="normal"
	programGroup="yes"
	desktop="no"
	applications="no"
	startMenu="no"
	startup="no"
	type="Application"
	terminal="false"
	encoding="UTF-8"
	categories="Game">
	<createForPack name="Core"/>
</shortcut>

<shortcut
	name="Uninstall ${game-name}"
	target="/usr/bin/java"
	commandLine="-jar &quot;${symbol_dollar}INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
	description="Uninstall ${game-name}"
	workingDirectory="${symbol_dollar}INSTALL_PATH/Uninstaller"
	initialState="normal"
	programGroup="yes"
	desktop="no"
	applications="no"
	startMenu="no"
	startup="no"
	type="Application"
	terminal="false"
	encoding="UTF-8"
	categories="Game">
	<createForPack name="Core"/>
</shortcut>

</shortcuts>
